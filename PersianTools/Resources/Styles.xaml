<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Brush x:Key="NormalBrush">Transparent</Brush>
    <Brush x:Key="NormalBorderBrush">Black</Brush>
    <Brush x:Key="DefaultedBorderBrush">DarkBlue</Brush>
    <Brush x:Key="HoverBrush">Transparent</Brush>
    <Brush x:Key="HoverForegroundBrush">RoyalBlue</Brush>
    <Brush x:Key="ForegroundBrush">Black</Brush>

    <Style x:Key="Persian">
        <Setter Property="Control.FontFamily" Value="./#Samim FD-WOL"/>
        <Setter Property="TextBlock.FontFamily" Value="./#Samim FD-WOL"/>
        <Setter Property="TextElement.FontFamily" Value="./#Samim FD-WOL"/>
    </Style>

    <LinearGradientBrush x:Key="CustomBorder" EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
        <GradientStop Color="#ABADB3" Offset="0.05"/>
        <GradientStop Color="#E2E3EA" Offset="0.07"/>
        <GradientStop Color="#E3E9EF" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>